//获取不同基本数据类型所占的字节数
#include<stdio.h>
int main(){
	printf("The size of int is %ld bytes.\n",sizeof(int)); //获取int类型所占的字节数
	printf("The size of char is %ld bytes.\n",sizeof(char));  //获取char类型所占的字节数
	printf("The size of unsigned is %ld bytes.\n",sizeof(unsigned));  //获取unsigned类型所占的字节数
	printf("The size of short is %ld bytes.\n",sizeof(short));  //获取short类型所占的字节数
	printf("The size of long is %ld bytes.\n",sizeof(long));  //获取long所占的字节数
	printf("The size of unsigned long is %ld bytes.\n",sizeof(unsigned long));  //获取unsigned long类型所占的字节数
	printf("The size of float is %ld bytes.\n",sizeof(float));  //获取float类型所占的字节数
	printf("The size of double is %ld bytes.\n",sizeof(double));  //获取double类型所占的字节数
	printf("The size of long double is %ld bytes.\n",sizeof(long double));  //获取long double类型所占的字节数
	return 0;
}
